	<repository>
		<id>eclipse-neon</id>
		<url>http://download.eclipse.org/releases/neon</url>
		<layout>p2</layout>
	</repository>
  </repositories>

  <build>
    <plugins>
	<plugin>
	    <groupId>org.eclipse.tycho</groupId>
	    <artifactId>tycho-maven-plugin</artifactId>
	    <version>0.26.0</version>
	    <extensions>true</extensions>
	</plugin>
    </plugins>
  </build>
</project>
